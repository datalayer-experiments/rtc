{
  "name": "@datalayer-rtc/yjs",
  "version": "0.1.0",
  "license": "MIT",
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "schema/*.json",
    "style/**/*.{css,eot,gif,html,jpg,json,png,svg,woff2,ttf}"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib/"
  },
  "scripts": {
    "build": "tsc",
    "build:tsc": "tsc --build",
    "clean": "rimraf lib tsconfig.tsbuildinfo",
    "clean:all": "rimraf node_modules lib tsconfig.tsbuildinfo",
    "prepublishOnly": "npm run build",
    "watch": "tsc -w --listEmittedFiles",
    "start": "fkill -s :8888 && ts-node src/server/start.ts",
    "server:ws:start": "fkill -s :1234 && YPERSISTENCE=./data-server node src/ws/server.js",
    "server:ws:start:min": "fkill -s :1234 && ts-node src/ws-min/server.ts",
    "server:ws:wait": "wait-on tcp:1234",
    "server:webrtc:start:1": "fkill -s :4444 && node src/webrtc/server-1/server.js",
    "server:webrtc:start:2": "fkill -s :4444 && node src/webrtc/server-2/index.js",
    "server:webrtc:wait": "wait-on tcp:4444",
    "test": "jest",
    "test:providers": "jest src/providers.test.ts",
    "hello": "ts-node src/hello.ts",
    "providers": "npm-run-all --parallel --race server:ws:start server:webrtc:start:1 providers:wait-start",
    "providers:wait-start": "npm-run-all server:ws:wait server:webrtc:wait test:providers"
  },
  "dependencies": {
    "fkill-cli": "6.0.1",
    "lib0": "^0.2.31",
    "lodash.debounce": "^4.0.8",
    "node-static": "0.7.11",
    "npm-run-all": "4.1.5",
    "rimraf": "~3.0.2",    
    "ws": "^7.3.1",
    "y-indexeddb": "^9.0.5",
    "y-leveldb": "^0.1.0",
    "y-protocols": "^1.0.0",
    "y-webrtc": "^10.1.6",
    "y-websocket": "^1.3.8",
    "yjs": "^13.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/expect-puppeteer": "^4.4.5",    
    "@types/jest": "26.0.19",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/puppeteer": "^5.4.2",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "jest-puppeteer": "^4.4.0",
    "puppeteer": "^5.5.0",
    "ts-node": "9.0.0",
    "typescript": "4.1.3",
    "wait-on": "5.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
