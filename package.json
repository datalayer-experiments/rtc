{
  "name": "@datalayer-rtc/parent",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "externals/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:test": "lerna run build:test",
    "build:tsc": "tsc --build tools/* packages/* examples/*",
    "clean": "lerna run clean",
    "clean:force": "find . -name node_modules | xargs rm -fr {}",
    "clean:all": "lerna run clean:all && rimraf node_modules yarn.lock",
    "clean:tests": "lerna run clean:tests",
    "lint:duplicates": "yarn run yarn-deduplicate --list --fail",
    "lint:typescript": "yarn run lint:typescript:check --fix",
    "lint:typescript:check": "eslint . --ext 'ts,tsx' --ignore-path .gitignore",
    "version": "lerna version",
    "automerge:hello": "yarn workspace @datalayer-rtc/automerge run hello",
    "automerge:start-server": "yarn workspace @datalayer-rtc/automerge run server:ws:start",
    "automerge:performance:start-server": "yarn workspace @datalayer-rtc/automerge-performance run server:ws:start",
    "automerge:wait": "yarn workspace @datalayer-rtc/automerge run server:ws:wait",
    "automerge:performance:wait": "yarn workspace @datalayer-rtc/automerge-performance run server:ws:wait",
    "yjs:start": "yarn workspace @datalayer-rtc/yjs run start",
    "yjs:start-server": "yarn workspace @datalayer-rtc/yjs run server:ws:start",
    "yjs:wait": "yarn workspace @datalayer-rtc/yjs run server:ws:wait",
    "yjs:hello": "yarn workspace @datalayer-rtc/yjs run hello",
    "yjs:providers": "yarn workspace @datalayer-rtc/yjs run providers",
    "textarea:automerge": "npm-run-all --parallel automerge:performance:start-server textarea:automerge:wait-start",
    "textarea:automerge:start": "yarn workspace @datalayer-rtc/textarea-automerge run start",
    "textarea:automerge:wait-start": "npm-run-all automerge:performance:wait textarea:automerge:start",
    "textarea:yjs": "npm-run-all --parallel yjs:start-server textarea:yjs:wait-start",
    "textarea:yjs:start": "yarn workspace @datalayer-rtc/textarea-yjs run start",
    "textarea:yjs:wait-start": "npm-run-all yjs:wait textarea:yjs:start",
    "textarea": "npm-run-all --parallel yjs:start-server automerge:start-server textarea:wait-start",
    "textarea:start": "yarn workspace @datalayer-rtc/textarea run start",
    "textarea:wait-start": "npm-run-all yjs:wait automerge:wait textarea:start"
  },
  "dependencies": {
  },
  "resolutions": {
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "~4.2.0",
    "@typescript-eslint/parser": "~4.2.0",
    "create-react-app": "3.4.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.0.6",
    "lerna": "^3.19.0",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "yarn-deduplicate": "2.0.0"
  }
}
